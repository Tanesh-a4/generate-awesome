{
  "version": 2,
  "builds": [
    {
      "src": "static/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "https://your-render-app.onrender.com/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/templates/index.html"
    }
  ],
  "functions": {
    "templates/index.html": {
      "includeFiles": "static/**"
    }
  }
}